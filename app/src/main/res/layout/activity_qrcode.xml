<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/qrcode_et"
        style="@style/et_common_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="请输入二维码的内容" />

    <Button
        android:id="@+id/generate_qr_btn"
        style="@style/btn_common_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="生成二维码"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/qrcode_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="这里显示扫描二维码中的信息" />

    <Button
        android:id="@+id/scan_qr_btn"
        style="@style/btn_common_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="扫描二维码"
        android:textSize="18sp" />

</LinearLayout>