<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:gravity="center"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:textColor="@color/dark_font"
        android:textSize="@dimen/text_large"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                style="@style/cb_common_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="checkbox1" />

            <CheckBox
                style="@style/cb_common_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="checkbox2" />

            <CheckBox
                style="@style/cb_common_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="checkbox3" />

            <CheckBox
                style="@style/cb_common_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="checkbox4" />

            <CheckBox
                style="@style/cb_common_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="checkbox5" />
        </LinearLayout>

    </ScrollView>


    <View
        style="@style/horizontal_line_style"
        android:background="#BCBCBC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_weight="1"
            android:background="@null"
            android:text="取消"
            android:textColor="@color/dialog_font_cancel_sel"
            android:textSize="@dimen/text_large" />

        <View
            android:id="@+id/line_view"
            style="@style/vertical_line_style"
            android:background="#BCBCBC" />

        <Button
            android:id="@+id/sure_btn"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_weight="1"
            android:background="@null"
            android:text="确定"
            android:textColor="@color/dialog_font_sure_sel"
            android:textSize="@dimen/text_large" />
    </LinearLayout>

</LinearLayout>